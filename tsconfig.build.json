{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "watch": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "module": "commonjs",
    // "module": "es2015",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "./",
    "baseUrl": "./",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    ".storybook",
    "build",
    "dist",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "**/*/test_*.ts",
    "**/*/test_*.tsx",
    "**/*/test_state.ts",
    "**/*/*.story.tsx",
    "examples",
    "docs"
]
}
